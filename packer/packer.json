{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "build_version": null,
    "kubernetes_version": "1.9.5-00",
    "kubernetes_cni_version": "0.6.0-00",
    "existing_ansible_ssh_args": "{{env `ANSIBLE_SSH_ARGS`}}",
    "vagrant_cloud_box_version": "1.0.{{timestamp}}",
    "vagrant_cloud_centos_tag": "heptio/quickstart-centos",
    "vagrant_cloud_ubuntu_tag": "heptio/quickstart-ubuntu",
    "vagrant_centos_iso_url": "http://mirror.rackspace.com/CentOS/7/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso",
    "vagrant_centos_iso_sha256": "http://mirror.rackspace.com/CentOS/7/isos/x86_64/sha256sum.txt",
    "vagrant_ubuntu_iso_url": "http://releases.ubuntu.com/16.04/ubuntu-16.04.4-server-amd64.iso",
    "vagrant_ubuntu_iso_sha256": "http://releases.ubuntu.com/16.04/SHA256SUMS"

  },
  "builders": [
    {
      "name": "ami-ubuntu",
      "type": "amazon-ebs",
      "instance_type": "t2.small",
      "source_ami": "{{user `ubuntu_16_04_ami`}}",
      "ami_name": "ami-ubuntu-16.04-{{user `kubernetes_version`}}-{{timestamp}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ssh_username": "ubuntu",
      "tags": {
        "build_version": "{{user `build_version`}}",
        "source_ami": "{{user `ubuntu_16_04_ami`}}",
        "build_date": "{{isotime}}",
        "distribution": "Ubuntu",
        "distribution_release": "xenial",
        "distribution_version": "16.04",
        "kubernetes_version": "{{user `kubernetes_version`}}",
        "kubernetes_cni_version": "{{user `kubernetes_cni_version`}}"
      }
    },
    {
      "name": "ami-centos",
      "type": "amazon-ebs",
      "instance_type": "t2.small",
      "source_ami": "{{user `centos_7_4_ami`}}",
      "ami_name": "ami-centos-7.4-{{user `kubernetes_version`}}-{{timestamp}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ssh_username": "centos",
      "tags": {
        "build_version": "{{user `build_version`}}",
        "source_ami": "{{user `centos_7_4_ami`}}",
        "build_date": "{{isotime}}",
        "distribution": "CentOS",
        "distribution_release": "Core",
        "distribution_version": "7.4",
        "kubernetes_version": "{{user `kubernetes_version`}}",
        "kubernetes_cni_version": "{{user `kubernetes_cni_version`}}"
      }
    },
    {
      "name": "qemu-ubuntu",
      "type": "qemu",
      "iso_url": "{{user `vagrant_ubuntu_iso_url`}}",
      "iso_checksum_url": "{{user `vagrant_ubuntu_iso_sha256`}}",
      "iso_checksum_type": "sha256",
      "http_directory": "http/ubuntu-16.04",
      "output_directory": "packer_output/qemu-ubuntu",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "boot_command": [
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz noapic ",
        "initrd=/install/initrd.gz ",
        "auto=true ",
        "priority=critical ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "<enter>"
      ]
    },
    {
      "name": "qemu-centos",
      "type": "qemu",
      "iso_url": "{{user `vagrant_centos_iso_url`}}",
      "iso_checksum_url": "{{user `vagrant_centos_iso_sha256`}}",
      "iso_checksum_type": "sha256",
      "http_directory": "http/centos7",
      "output_directory": "packer_output/qemu-centos",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    },
    {
      "name": "vbox-ubuntu",
      "type": "virtualbox-iso",
      "guest_os_type": "Ubuntu_64",
      "iso_url": "{{user `vagrant_ubuntu_iso_url`}}",
      "iso_checksum_url": "{{user `vagrant_ubuntu_iso_sha256`}}",
      "iso_checksum_type": "sha256",
      "http_directory": "http/ubuntu-16.04",
      "output_directory": "packer_output/vbox-ubuntu",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "boot_command": [
        "<enter><wait>",
        "<f6><esc>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
        "<bs><bs><bs>",
        "/install/vmlinuz noapic ",
        "initrd=/install/initrd.gz ",
        "auto=true ",
        "priority=critical ",
        "url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
        "<enter>"
      ]
    },
    {
      "name": "vbox-centos",
      "type": "virtualbox-iso",
      "guest_os_type": "RedHat_64",
      "iso_url": "{{user `vagrant_centos_iso_url`}}",
      "iso_checksum_url": "{{user `vagrant_centos_iso_sha256`}}",
      "iso_checksum_type": "sha256",
      "http_directory": "http/centos7",
      "output_directory": "packer_output/vbox-centos",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "sudo systemctl poweroff",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "../ansible/playbook.yml",
      "ansible_env_vars": [
        "ANSIBLE_SSH_ARGS='{{user `existing_ansible_ssh_args`}} -o IdentitiesOnly=yes'"
      ],
      "extra_arguments": [
        "--extra-vars",
        "common_upgrade_base=true kubernetes_version={{user `kubernetes_version`}} kubernetes_cni_version={{user `kubernetes_cni_version`}}"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "output": "packer_output/{{ .BuildName }}.box"
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "{{user `vagrant_cloud_ubuntu_tag`}}",
        "version": "{{user `vagrant_cloud_box_version`}}",
        "only": ["qemu-ubuntu","vbox-ubuntu","ami-ubuntu"]
      },
      {
        "type": "vagrant-cloud",
        "box_tag": "{{user `vagrant_cloud_centos_tag`}}",
        "version": "{{user `vagrant_cloud_box_version`}}",
        "only": ["qemu-centos","vbox-centos","ami-centos"]
      }
    ]
  ]
}
